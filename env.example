# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://dev:dev123@localhost:5432/digital_commerce
REDIS_URL=redis://localhost:6379

# External Services
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
AWS_ACCESS_KEY_ID=AKIA_your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=digital-commerce-assets

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
NEXTAUTH_SECRET=your-nextauth-secret-change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# Search Engine
ELASTICSEARCH_URL=http://localhost:9200
ALGOLIA_APP_ID=your_algolia_app_id_here
ALGOLIA_API_KEY=your_algolia_api_key_here

# Application Configuration
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Email Configuration
FROM_EMAIL=noreply@digitalcommerce.com
FROM_NAME=Digital Commerce Platform

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=pdf,epub,mobi,zip,rar,mp3,mp4,avi,mov,doc,docx,ppt,pptx,xls,xlsx,psd,ai,sketch,figma

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key_here

